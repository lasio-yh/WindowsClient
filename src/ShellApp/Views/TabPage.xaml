<UserControl x:Class="ShellApp.Views.TabPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab SelectedSource="/Views/Report.xaml" Layout="Tab">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="Report" Source="/Views/Report.xaml" />
                <mui:Link DisplayName="Content" Source="/Views/Content.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
    
</UserControl>

<UserControl x:Class="MnStudio.Views.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             d:DesignHeight="300" d:DesignWidth="300">
    <ScrollViewer>
        <StackPanel Margin="0,0,0,0" HorizontalAlignment="Stretch" Orientation="Horizontal">
            <TextBlock Text="{Binding NowTime, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource Title}" Margin="0,0,0,0"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
